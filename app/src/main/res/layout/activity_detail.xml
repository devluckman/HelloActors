<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="@dimen/limabelas"
        android:id="@+id/imgActor_detail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher_round"
        android:paddingTop="@dimen/dimensdelapan"/>

    <TextView
        android:layout_marginTop="@dimen/limabelas"
        android:layout_below="@+id/imgActor_detail"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtName_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_marginTop="@dimen/dimenstiga"
        android:layout_below="@+id/txtName_detail"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtDob_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:layout_marginTop="@dimen/dimenstiga"
        android:layout_below="@+id/txtDob_detail"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtDesc_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textAlignment="center"/>


</RelativeLayout>